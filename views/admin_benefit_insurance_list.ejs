<%-include('./admin_header.ejs')%>
<%-include('./admin_left_menu_bar.ejs')%>

 
<section class="content dashboard">
   
    <div class="page-heading">
        <h1>Benefit Insurance List</h1>
        <ol class="breadcrumb">
            <li><a href="/admin/index">Home</a></li>
            <li class="active">benefit insurance</li>
        </ol>
    </div>
  
    <div class="panel panel-default">
        <div class="panel-heading">
            <button class="btn btn-info"><i class="fa fa-plus"></i> <a href="/admin/create_benefit_insurance">Add New</a></button>
        </div>

        <div class="panel-body">
            <div class="table-responsive">
                <table id="myTable" class="table js-exportable table-bordered">

                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Insurance Type</th>
                            <th>Insurance Sub Type</th>
                            <th>Title</th>
                            <th>Advantage</th>
                            
                            <th>Status</th>
                            <th>Edit</th> 
                            <th>Delete</th> 
                        </tr>
                    </thead>
                    <tbody>
                       <% for(var i=0; i < data.length; i++) { %>
                            <tr>
                                
                            <td><%= i+1%></td>
                            <td><%=data[i].insuranceType%></td> 
                            <td><%=data[i].insuranceSubType%></td>
                            <td><%=data[i].title%></td>
                            <td><%=data[i].text%></td>
                            <td>
                                <% if(data[i].benefit_insurance_status ==0) { %>
                                    <a href="/admin/update_benefit_insurance_status/<%=data[i]._id%>"  class="btn btn-success" >Active</a>
                                <% } else { %>
                                    <a href="/admin/update_benefit_insurance_status/<%=data[i]._id%>"  class="btn btn-danger">Deactive</a>
                                <% } %>
                            </td>  

                            <td>
                                 <a href="/admin/edit_benefit_insurance/<%=data[i]._id%>" class="btn btn-primary">
                                <i class="fa fa-edit"></i>
                                </a>
                            </td>

                            <td>
                            
                            <a href ="/admin/delete_benefit_insurance/<%=data[i]._id%>"class="btn btn-circle  btn-sm  btn-danger"><i class="fa fa-trash"></i></a>
                           
                            </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
 
    </div>
</section>
<%-include('./admin_footer.ejs')%>