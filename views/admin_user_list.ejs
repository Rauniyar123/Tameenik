<%-include('./admin_header.ejs')%>
<%-include('./admin_left_menu_bar.ejs')%>
<style>
    a{
        text-decoration: none;
        color: white;
    }
</style>

<section class="content dashboard">
   
    <div class="page-heading">
        <h1>User list</h1>
        <ol class="breadcrumb">
            <li><a href="/admin/index">Home</a></li>
            <li class="active">user list</li>
        </ol>
    </div>

    <div class="panel panel-default">

        <div class="panel-body">

            <div class="table-responsive">
                <table id="myTable" class="table js-exportable table-bordered">

                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Civil ID</th>
                            <th>Name</th>
                            <th>Country Code</th>
                            <th>Mobile No</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Date Of Birth</th>
                            <th>Created Date</th>
                            <th>Updated Date</th>
                            <th>Status</th>
                            <th>View</th>
                            <!-- <th>Delete</th> -->

                        </tr>
                    </thead>

                    <tbody>


                        <% for(var i=0; i < data.length; i++) { %>
                            <tr>
                                
                            <td><%= i+1%></td>

                            
                            <td><%=data[i].civilId%></td>  
                            <td><%=data[i].first_name%></td> 
                            <td><%=data[i].country_code%></td>   
                            <td><%=data[i].mobile_no%></td>      
                            <td><%=data[i].email%></td> 
                            <td><%=data[i].gender%></td> 
                            <td><%=data[i].date_of_birth%></td>
                            <td><%= new Date(data[i].createdAt).toLocaleString() %></td> 
                            <td><%= new Date(data[i].updatedAt).toLocaleString() %></td>
                            <td>
                                <% if(data[i].user_status==0) { %>
                                    <a href="/admin/update_user_status/<%=data[i]._id%>"  class="btn btn-success" >Active</a>
                                <% } else { %>
                                    <a href="/admin/update_user_status/<%=data[i]._id%>"  class="btn btn-danger">Deactive</a>
                                <% } %>
                            </td>                     
                            <td>
                                <a href="/admin/user_view_details/<%=data[i]._id%>" class="btn btn-primary">
                                <i class="fa fa-eye"></i>
                                </a>
                            </td>


                            <!-- <td><a href ="/admin/delete_user/<%=data[i]._id%>"class="btn btn-circle  btn-sm  btn-danger" onclick="return confirmDelete(event)"><i class="fa fa-trash"></i></a></td> -->
                            </tr>
                            <% } %>
                    
                    </tbody>
                </table>
            </div>
        </div> 
    </div>

    </div>
</section>
<%-include('./admin_footer.ejs')%>
<script>
    function confirmDelete(event) {
        if (confirm('Are you sure you want to delete this user?')) {
            // User clicked OK, allow the href to proceed
            return true;
        } else {
            // User clicked Cancel, prevent the href from proceeding
            event.preventDefault();
            return false;
        }
    }
</script>